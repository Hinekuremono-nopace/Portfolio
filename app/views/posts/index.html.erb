<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center">
    <h1 class="text-white">投稿一覧</h1>
    <% if user_signed_in? %>
      <%= link_to "新規投稿", new_post_path, class: 'btn btn-outline-light' %>
    <% end %>
  </div>

  <% @posts.each do |post| %>
    <div class="row mb-4">
      <div class="col">
        <%= link_to post_path(post), class: "card card-link", style: "width: 100%;" do %>
          <div class="card bg-dark text-white h-100">
            <div class="card-body">
              <h6 class="card-subtitle mb-2 text-secondary"><%= post.created_at.strftime("%Y年%m月%d日") %></h6>
              <h5 class="card-title"><%= post.title %></h5>
              <p class="card-text"><%= truncate(post.content.to_plain_text, length: 100) %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <% if user_signed_in? %>
    <div class="text-center mt-4">
      <%= link_to "新規投稿", new_post_path, class: 'btn btn-outline-light' %>
    </div>
  <% else %>
    <p class="text-white text-center mt-4">投稿するには
    <%= link_to "ログイン", new_user_session_path, class: 'text-white' %>
    してください。</p>
  <% end %>
</div>
