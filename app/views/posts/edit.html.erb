<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card bg-dark text-white">
        <div class="card-body">
          <h2 class="card-title text-center">投稿を編集する</h2>

          <%= render "form", post: @post %>

          <div class="d-flex justify-content-between align-items-center mt-3">
            <%= link_to "この投稿を表示", @post, class: "btn btn-outline-light btn-sm" %>
            <%= link_to "投稿一覧に戻る", posts_path, class: "btn btn-outline-light btn-sm" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
