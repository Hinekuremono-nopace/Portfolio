<p style="color: green"><%= notice %></p>

<h1>投稿一覧</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render partial: 'posts/indexpost', locals: { post: post }  %>
  <% end %>
</div>

<% if user_signed_in? %>
  <%= link_to "新規投稿", new_post_path %>
  <% else %>
  <p>投稿するには
  <%= link_to "ログイン", new_user_session_path %>
  してください。</p>
<% end %>
