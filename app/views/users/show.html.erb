<h1>マイページ</h1>

<div class="posts">
  <% @posts.each do |post| %>
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%= link_to post.title, post_path(post) %></h5>
        <p class="card-text"><%= post.content %></p>
      </div>
    </div>
  <% end %>
</div>

<br>

<%= link_to "New post", new_post_path %>
